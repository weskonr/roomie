@model roomie.Models.UserProfileEditmodel
@{
    ViewBag.Title = "EditUser";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/edit_user.css" rel="stylesheet" />
    <title>Edytuj użytkownika</title>
</head>

<div class="container">

    <div class="container-create-ad" id="container">

        <div class="create-ad">

            @using (@Html.BeginForm("SaveNewUser", "User", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))

            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <h1>Edytuj swoje dane: </h1>

                    <hr />

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <p> Imię i nazwisko: </p>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.user_name, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.user_name) } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.user_description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Napisz coś o sobie" } })
                            <span style="color:red">@Html.ValidationMessageFor(x => x.user_description)</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <p>Adres e-mail:</p>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.user_email, new { htmlAttributes = new { @class = "form-control" } })
                            <span style="color:red">@Html.ValidationMessageFor(x => x.user_email)</span>
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-md-10">
                            <p class=""><label for="name">Dodaj swoje zdjęcie:</label></p>
                            <input type="file" name="user_image" id="user_image" class="form-field" />
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-10">
                            <p> Dodaj swój numer telefonu: </p>
                            @Html.EditorFor(model => model.user_contact, new { htmlAttributes = new { @class = "form-control", @type = "tel", pattern = "[0-9]{3}-[0-9]{3}-[0-9]{3}" } })
                            <span style="color:red">@Html.ValidationMessageFor(x => x.user_contact)</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <p> Twoja data urodzin: </p>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.user_birthdate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        </div>
                    </div>

                    <div class="pro-bool">

                        <div class="bool">
                            <img src="~/Content/img_icons/smoking.png" title="jestem osobą palącą" />
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.user_smoke)
                                </div>
                            </div>
                        </div>

                        <div class="bool">
                            <img src="~/Content/img_icons/pet.png" title="jestem osobą lubiącą zwierzęta" />
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.user_pet)
                                </div>
                            </div>
                        </div>

                    </div>

                    <hr />

                    <div class="submit">

                        <a href="@Url.Action("SaveNewUser", "User" )">
                            <button> Zapisz swoje dane! </button>
                        </a>

                    </div>



                </div>
             }

        </div>

    </div>

</div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
